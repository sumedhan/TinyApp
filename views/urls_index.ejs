<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <title>URL Index</title>
  </head>
  <body>
    <% include ../partials/_header %>
  
    <h4>URLs in TinyApps </h4>

    <table class="table">
      
      <th>Short URL</th>
      <th>Long URL</th>
      <th>Date Created</th>
      <th>Number of Visits</th>
      <th></th>
      <th>Delete</th>
      
      <% for(var item in urls) { %>
      <tr>
        <td><a href="/u/<%= item%>">/u/<%= item%></a></td>
        <td><%= urls[item].longURL%></td>
        <td><%= urls[item].dateCreated%></td>
        <td><%= urls[item].numberOfVisits%></td>
        <td>
          <a href="./urls/<%= item%>">Edit</a>
        </td> 
        <td>
            <form method="POST" action="/urls/<%= item%>/delete?_method=DELETE">
              <input type="submit" value="🗑️"> 
            </form>
        </td>
      </tr>
      
    <%  } %>
    </table>
    <p><br><br>
      <a href="./urls/new">Tiny a new link</a>
    </p>
    <% include ../partials/_footer%>
  </body>
</html>