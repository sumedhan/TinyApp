<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <title>URL Index</title>
  </head>
  <body>
    <% include ../partials/_header %>
    <% if (username) { %>
    <h4>URLs in TinyApps</h4>
    <table>
      <th>Short URL</th>
      <th>Long URL</th>
      <th>Date Created</th>
      <th>Number of Visits</th>
      <th></th>
    <% for(var item in urls) {%>
    <tr>
      <td><%= item%></td>
      <td><%= urls[item].longURL%></td>
      <td><%= urls[item].dateCreated%></td>
      <td><%= urls[item].numberOfVisits%></td>
      <td>
        <a href="./urls/<%= item%>">Edit</a>
      </td>
      <td>
          <form method="POST" action="/urls/<%= item%>/delete">
            <input type="submit" value="Delete"> 
          </form>
      </td>
      
    <% } %>
    </table>
    <p>
    <a href="./urls/new">Tiny a new link</a>
    </p>
    <% }%>
   
    <% include ../partials/_footer%>
  </body>
</html>